
  <body>
    <div class="container update-todo" >
      <div class="row">
        
        <form action="/update/{{id}}" method="POST">
          <div class="form-group">
            <label for="title">Enter New Title</label>
            <input type="text" class="form-control" data-id="{{id}}" name="title" placeholder="Enter Title">
            </div>
            <div class="form-group">
            <button type="submit" class="btn btn-primary update-btn" name="update" data-id="{{id}}">Update</button>
            </div>
            
        </form>
        
    </div>
  </body>
