
  <body>
  <div class="container">
    <h2>{{title}}</h2>
  </div>
  <div class="container todos">
    <div class="row">
      <table class="table table-striped table-hover table-bordered">
        <thead class="table-primary">
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Assignee</th>
            <th scope="col">Done</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
          <tr class="todo">
            <td>{{title}}</td>
            <td>{{assignee}}</td>
            <td>{{done}}</td>
            <td>
              <form action="/delete/{{id}}" method="POST">
                <button class="btn btn-primary delete-btn" data-id="{{id}}">Delete</button>
              </form>
              {{#if this.done}}
              <form action="/markUndone/{{id}}" method="POST">
                <button class="btn btn-primary undone-btn" data-id="{{id}}">Mark as Undone</button>
              </form>
              {{else}}
              <form action="/markDone/{{id}}" method="POST">
                <button class="btn btn-primary done-btn" data-id="{{id}}">Mark as Done</button>
              </form>
              {{/if}}
              <a class="btn btn-primary" href="/updateTask/{{id}}" type="button">Update</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
    <div class="container">
          <a id="add" class="btn btn btn-primary" type="button" href="/addTask">{{addNewTask}}</a>

    </div>

    <br/>

    <div class="container">
      <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
          aria-expanded="false">
            List
          </button>
      <div class="dropdown-menu" aria-labelledby="triggerId">
        <a class="dropdown-item" href="/">List All</a>
        <a class="dropdown-item" href="/done">List Done</a>
        <a class="dropdown-item" href="/undone">List Undone</a>
      </div>
    </div>
  </body>
    


  

    
